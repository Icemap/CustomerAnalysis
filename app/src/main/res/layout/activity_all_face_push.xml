<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_push"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.wqz.customeranalysis.AllFacePushActivity">

    <com.wqz.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="到店记录"
        android:textSize="16sp"
        android:layout_below="@+id/iv_head"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_rec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="XX-XX-XX XX:XX:XX"
        android:textSize="16sp"
        android:layout_below="@+id/tv_last_time"/>

    <TextView
        android:id="@+id/tv_rec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="XX-XX-XX XX:XX:XX"
        android:textSize="16sp"
        android:layout_below="@+id/tv_rec1"/>

    <TextView
        android:id="@+id/tv_rec3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="XX-XX-XX XX:XX:XX"
        android:textSize="16sp"
        android:layout_below="@+id/tv_rec2"/>
</RelativeLayout>
